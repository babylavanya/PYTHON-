n=int(input())
s=0
i=1
while i<n:
    if n%i==0:
        s+=i
    i+=1
if s==n:
    print(n,'is a perfect number')
else:
    print(n,'is not a perfect number')
     

(OR)

n=int(input())
s=0
for i in range(1,n):
    if n%i==0:
        s+=i
if s==n:
    print(n,'is a perfect number')
else:
    print(n,'is not a perfect number')

